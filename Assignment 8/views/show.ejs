<% include ./partials/header %>
  <div class="container mt-4 mb-4">
    <div class="row justify-content-center">
      <div class="col-sm-6">
        <div class="card mb-4">
          <div class="card-header">
            <a class="header" href="/blogs/<%= blog._id %>" style="color: black; font-size: large;">
              <%= blog.title %>
            </a>
            <span style="float: right;">
              <%= blog.created.toDateString() %>
            </span>
          </div>
          <div class="card-body">
            <img src="<%= blog.image %>" width="100%" height="400px">
            <p class="card-text mt-2">
              <%- blog.body.substring(0, 100) %>...
            </p>
            <a class="btn btn-warning" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
      <form class="validatedform" action="/blogs/<%= blog.id %>/comment" method="POST" novalidate>
        <div class="form-group">
          <label class="h3">Leave A Comment:</label>
        </div>
        <div class="form-group">
          <label for="comment">Comment:</label>
          <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
  </div>
  <% include ./partials/footer %>
